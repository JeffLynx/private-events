<h1><%= @user.email %></h1>

<h2>Created events</h2>
<ul>
  <% @user.created_events.each do |event| %>
    <li><%= event.title %></li>
  <% end %>
</ul>

<h2>Attended events</h2>

<ul>
  <% @user.attended_events.each do |event| %>
    <li><%= event.title %></li>
  <% end %>
</ul>

<h2>Upcoming events</h2>
<ul>
  <% @user.attended_events.where("date >= ?", Time.current).each do |event| %>
    <li><%= event.title %> - <%= event.date %></li>
  <% end %>
</ul>

<h2>Past events</h2>
<ul>
  <% @user.attended_events.where("date < ? ", Time.current).each do |event| %>
    <li><%= event.title %> - <%= event.date %></li>
  <% end %>
</ul>
